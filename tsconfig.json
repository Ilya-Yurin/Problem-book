{
  "compilerOptions": {
    "sourceMap": true,
    "jsx": "react",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": false,
    "outDir": "build",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "./",
    "rootDir": "src",
    "paths": {
      "src/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": ["styled", "css"]
      }
    ],
    "allowSyntheticDefaultImports": true,
  },
  "exclude": ["dist", "build", "node_modules"]
}
